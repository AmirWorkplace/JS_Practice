// NEw

{
  // editor
  "editor.fontSize": 20,
  "editor.tabSize": 2,
  "editor.fontFamily": "Fira Code, Operator Mono",
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  // cursor
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorBlinking": "expand",
  // config related to code formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.tslint": true,
    "source.organizeImports": true
  },

  "eslint.alwaysShowStatus": true,
  //terminal
  "terminal.integrated.fontSize": 20,
  "terminal.integrated.letterSpacing": 0,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontFamily": "Fira Code, Operator Mono",
  "workbench.colorTheme": "Learn with Sumit - Shades of Grey",
  "workbench.iconTheme": "material-icon-theme",
  // terminal customization // Joss Color "#ff009d !
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#000",
    "minimap.background": "#000",
    "editor.background": "#000",
    "sideBar.background": "#000",
    "sideBarSectionHeader.background": "#000",
    "sideBarSectionHeader.border": "#000",
    "sideBarSectionHeader.foreground": "#00ff2a",
    "sideBar.border": "#111",
    "tab.inactiveForeground": "#fffb00",
    "tab.activeForeground": "#00ff11",
    "tab.activeBorder": "#51ff",
    "tab.border": "#000",
    "tab.activeBorderTop": "#000",
    "activityBar.background": "#000",
    "activityBar.dropBorder": "#000",
    "activityBar.border": "#111",
    "window.activeBorder": "#000",
    "activityBarBadge.foreground": "#fffb00",
    "activityBar.inactiveForeground": "#00fff2",
    "activityBar.activeBorder": "#00ff2f",
    "activityBar.foreground": "#00ff2f",
    "activityBarBadge.background": "#000",
    "editorGutter.background": "#000",
    "statusBar.background": "#000",
    "editor.selectionBackground": "#333",
    "editor.lineHighlightBackground": "#000",
    "statusBarItem.hoverBackground": "#6363633a",
    "list.activeSelectionBackground": "#0004ffad",
    "editorGroupHeader.tabsBackground": "#000",
    "tab.activeBackground": "#111",
    "button.background": "#2b2b2b",
    "tab.inactiveBackground": "#000",
    "terminal.background": "#000",
    "problemsWarningIcon.foreground": "#ffc107",
    "terminal.border": "#2c2c54",
    "scrollbarSlider.background": "#00f7ff",
    "scrollbarSlider.hoverBackground": "#00f7ff",
    "scrollbar.shadow": "#000",
    "scrollbarSlider.activeBackground": "#ffff4d",
    "editorCursor.background": "#ffff4d",
    "editorCursor.foreground": "#ffff4d",
    "bookmarks.lineBorder": "#2f2f2f",
    "selection.background": "#222",
    "editor.selectionHighlightBackground": "#222",
    "editorSuggestWidget.background": "#000",
    "editor.findMatchHighlightBackground": "#222"
  }
}
